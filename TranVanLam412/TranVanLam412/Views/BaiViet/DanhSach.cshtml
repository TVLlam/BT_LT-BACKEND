@model List<TranVanLam412.Models.BaiViet>
<div class="container">
    <h2>Bài Viết</h2>
    <a href="/BaiViet/Create" class="btn btn-danger my-3">Them moi</a>
    <table class="table">
        <thead>
            <tr>
                <th>Mã Bài Viết: </th>
                <th>Tiêu đề: </th>
                <th>Nội Dung: </th>
                <th>Ngày post: </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaBaiViet</td>
                    <td>@item.TieuDe</td>
                    <td>@item.NoiDung</td>
                    <td>@item.NgayPost</td>
                </tr>
            }
        </tbody>
    </table>
</div>