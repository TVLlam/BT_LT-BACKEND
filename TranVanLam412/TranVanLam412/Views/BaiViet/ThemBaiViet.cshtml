@model TranVanLam412.Models.BaiViet
<div class="container col-md-8 offset-md-2">
    <form action="/BaiViet/Create" method="post">
        <h2>Thêm mới bài viết</h2>
        <div class="mt-3">
            <label asp-for="MaBaiViet">Mã Bài Viết</label>
            <input asp-for="MaBaiViet" class="form-control" />
            <span asp-validation-for="MaBaiViet" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="TieuDe">Tiêu Đề</label>
            <input asp-for="TieuDe" class="form-control" />
            <span asp-validation-for="TieuDe" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="NoiDung">Nội Dung</label>
            <input asp-for="NoiDung" class="form-control" />
            <span asp-validation-for="NoiDung" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="NgayPost">Ngày Post</label>
            <input asp-for="NgayPost" class="form-control" />
            <span asp-validation-for="NgayPost" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <input type="submit" value="Them moi" class="btn btn-success" />
        </div>

    </form>
</div>