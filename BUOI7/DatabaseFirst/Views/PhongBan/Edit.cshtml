@model DatabaseFirst.Models.PhongBan
@{
    ViewData["Title"] = "Edit";
}

<div class="container col-md-10">
    <div class="card shadow">
        <div class="card-header">
            <h5>Sửa phòng ban</h5>
        </div>
        <div class="card-body">
            <form action="/PhongBan/Edit" method="post">
                <div class="mt-3">
                    <label asp-for="MaPhong">Mã phòng</label>
                    <input asp-for="MaPhong" value="@Model.MaPhong" class="form-control">
                </div>
                <div class="mt-3">
                    <label asp-for="TenPhong">Tên phòng</label>
                    <input asp-for="TenPhong" value="@Model.TenPhong" class="form-control">
                </div>
                <div class="mt-3">
                    <label asp-for="DienThoai">Điện thoại</label>
                    <input asp-for="DienThoai" value="@Model.DienThoai" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
            </form>
        </div>
    </div>
</div>



