@model DatabaseFirst.Models.PhongBan
@{
    ViewData["Title"] = "Create";
}

<div class="container col-md-10">
    <div class="card">
        <div class="card-header">
            <h5>Thêm mới phòng ban</h5>
        </div>
        <div class="card-body">
            <form action="/PhongBan/Create" method="post">
				<div class="mt-3">
					<label asp-for="MaPhong">Mã phòng</label>
					<input asp-for="MaPhong" class="form-control">
                </div>
                <div class="mt-3">
                    <label asp-for="TenPhong">Tên phòng</label>
                    <input asp-for="TenPhong" class="form-control">
                </div>
                <div class="mt-3">
                    <label asp-for="DienThoai">Điện thoại</label>
                    <input asp-for="DienThoai" class="form-control">
                </div>
				<button type="submit" class="btn btn-primary mt-3">Thêm mới</button>
            </form>
        </div>
    </div>
</div>

